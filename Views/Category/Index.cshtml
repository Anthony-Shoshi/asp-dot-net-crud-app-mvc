@model IEnumerable<Category>
@{
	ViewData["Title"] = "Categories";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Categories</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp; Add New</a>
		</div>
	</div>
</div>

<table class="table table-striped table-hover" width="100%">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Display Order</th>
			<th>Created</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr class="table-primary">
				<td>
					@category.Id
				</td>
				<td>
					@category.Name
				</td>
				<td>
					@category.DisplayOrder
				</td>
				<td>
					@category.CreatedDateTime
				</td>
				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-sqaure"></i>&nbsp; Edit</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

