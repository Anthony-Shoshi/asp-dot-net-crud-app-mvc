@model Category
@{
	ViewData["Title"] = "Delete Category";
}

<div class="container p-3">
	<div class="row">
		<div class="col-6">
			<h2 class="text-primary">Delete Category</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Index"><i class="bi bi-list"></i>&nbsp; Back to List</a>
		</div>
	</div>
</div>

<form method="post" autocomplete="off" asp-action="DeletePost">
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label asp-for="Name" class="form-label mt-2"></label>
		<input type="text" class="form-control" disabled asp-for="Name" placeholder="Enter Name">
	</div>
	<div class="form-group">
		<label asp-for="DisplayOrder" class="form-label mt-2"></label>
		<input type="number" class="form-control" disabled asp-for="DisplayOrder" placeholder="Enter Display Order">
	</div>
	<button type="submit" class="btn btn-danger mt-3">Delete</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}