@model Category
@{
	ViewData["Title"] = "Edit Category";
}

<div class="container p-3">
	<div class="row">
		<div class="col-6">
			<h2 class="text-primary">Edit Category</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Index"><i class="bi bi-list"></i>&nbsp; Back to List</a>
		</div>
	</div>
</div>

<form method="post" autocomplete="off">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="Name" class="form-label mt-2"></label>
		<input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="DisplayOrder" class="form-label mt-2"></label>
		<input type="number" class="form-control" asp-for="DisplayOrder" placeholder="Enter Display Order">
		<span class="text-danger" asp-validation-for="DisplayOrder"></span>
	</div>
	<button type="submit" class="btn btn-primary mt-3">Update</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}